<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shinemo.report.dal.base.conf.mapper.MetaDbConfMapper">

	<!-- 结果集对应关系 -->
	<resultMap id="result" type="com.shinemo.report.client.base.conf.domain.MetaDbConf" >
		<id column="id" property="id"/>
		<result property="gmtCreate" column="gmt_create"/>
		<result property="gmtModified" column="gmt_modified"/>
		<result property="createUserId" column="create_user_id"/>
		<result property="createUserName" column="create_user_name"/>
		<result property="appType" column="app_type"/>
		<result property="status" column="status"/>
		<result property="user" column="user"/>
		<result property="passwd" column="passwd"/>
		<result property="dbName" column="db_name"/>
		<result property="jdbcUrl" column="jdbc_url"/>
		<result property="jdbcDriver" column="jdbc_driver"/>
		<result property="type" column="type"/>
	</resultMap>

	<!-- 数据库字段 -->
	<sql id="columns">
		id, gmt_create, gmt_modified, create_user_id, create_user_name, app_type, status, user, passwd, db_name, jdbc_url, jdbc_driver, type
	</sql>

    <sql id="table">
        meta_db_conf
    </sql>

    <!-- 查询条件 -->
    <sql id="conditions">
        <where>
            <choose>
                <when test="id != null">and id = #{id}</when>
                <otherwise>
					<if test="gmtCreate != null">and gmt_create = #{gmtCreate}</if>
					<if test="gmtModified != null">and gmt_modified = #{gmtModified}</if>
					<if test="createUserId != null">and create_user_id = #{createUserId}</if>
					<if test="createUserName != null">and create_user_name = #{createUserName}</if>
					<if test="appType != null">and app_type = #{appType}</if>
					<if test="status != null">and status = #{status}</if>
					<if test="user != null">and user = #{user}</if>
					<if test="passwd != null">and passwd = #{passwd}</if>
					<if test="dbName != null">and db_name = #{dbName}</if>
					<if test="jdbcUrl != null">and jdbc_url = #{jdbcUrl}</if>
					<if test="jdbcDriver != null">and jdbc_driver = #{jdbcDriver}</if>
					<if test="type != null">and type = #{type}</if>
                </otherwise>
            </choose>
        </where>
    </sql>


	<!-- 查询结果集 -->
    <select id="find" resultMap="result"
            parameterType="com.shinemo.report.client.base.conf.query.MetaDbConfQuery">
        select
        <include refid="columns"/>
        from
        <include refid="table"/>
        <include refid="conditions"/>
        <if test="orderByEnable and orderByList != null and orderByList.size() > 0">
            order by
            <foreach collection="orderByList" item="orderBy" separator=",">
                ${orderBy.column} ${orderBy.sort}
            </foreach>
        </if>
        <if test="pageEnable">
            limit #{startRow}, #{pageSize}
        </if>
    </select>

	<!-- 查询某条记录 -->
    <select id="get" resultMap="result" parameterType="com.shinemo.report.client.base.conf.query.MetaDbConfQuery">
        select
        <include refid="columns"/>
        from
        <include refid="table"/>
        <include refid="conditions"/>
        limit 1
    </select>

	<!-- 统计查询结果数量 -->
    <select id="count" resultType="long" parameterType="com.shinemo.report.client.base.conf.query.MetaDbConfQuery">
        select count(*) from
        <include refid="table"/>
        <include refid="conditions"/>
    </select>

	<!-- 删除 -->
    <delete id="delete" parameterType="com.shinemo.report.client.base.conf.query.MetaDbConfQuery">
        delete from
        <include refid="table"/>
        where id = #{id}
    </delete>

	<!-- 插入 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.shinemo.report.client.base.conf.domain.MetaDbConf">
        insert into
        <include refid="table"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
                    <if test="id != null">
						id,
					</if>
					gmt_create,
					gmt_modified,
                    <if test="createUserId != null">
						create_user_id,
					</if>
                    <if test="createUserName != null">
						create_user_name,
					</if>
                    <if test="appType != null">
						app_type,
					</if>
                    <if test="status != null">
						status,
					</if>
                    <if test="user != null">
						user,
					</if>
                    <if test="passwd != null">
						passwd,
					</if>
                    <if test="dbName != null">
						db_name,
					</if>
                    <if test="jdbcUrl != null">
						jdbc_url,
					</if>
                    <if test="jdbcDriver != null">
						jdbc_driver,
					</if>
                    <if test="type != null">
						type,
					</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                    <if test="id != null">
						#{id, jdbcType=BIGINT},
                    </if>
                    now(),
                    now(),
                    <if test="createUserId != null">
						#{createUserId, jdbcType=BIGINT},
                    </if>
                    <if test="createUserName != null">
						#{createUserName, jdbcType=VARCHAR},
                    </if>
                    <if test="appType != null">
						#{appType, jdbcType=INTEGER},
                    </if>
                    <if test="status != null">
						#{status, jdbcType=INTEGER},
                    </if>
                    <if test="user != null">
						#{user, jdbcType=VARCHAR},
                    </if>
                    <if test="passwd != null">
						#{passwd, jdbcType=VARCHAR},
                    </if>
                    <if test="dbName != null">
						#{dbName, jdbcType=VARCHAR},
                    </if>
                    <if test="jdbcUrl != null">
						#{jdbcUrl, jdbcType=VARCHAR},
                    </if>
                    <if test="jdbcDriver != null">
						#{jdbcDriver, jdbcType=VARCHAR},
                    </if>
                    <if test="type != null">
						#{type, jdbcType=INTEGER},
                    </if>
        </trim>
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.shinemo.report.client.base.conf.domain.MetaDbConf">
        UPDATE meta_db_conf
        <set>
            gmt_modified = now(),
            <if test="createUserId != null">
                create_user_id = #{createUserId, jdbcType=BIGINT},
            </if>
            <if test="createUserName != null">
                create_user_name = #{createUserName, jdbcType=VARCHAR},
            </if>
            <if test="appType != null">
                app_type = #{appType, jdbcType=INTEGER},
            </if>
            <if test="status != null">
                status = #{status, jdbcType=INTEGER},
            </if>
            <if test="user != null">
                user = #{user, jdbcType=VARCHAR},
            </if>
            <if test="passwd != null">
                passwd = #{passwd, jdbcType=VARCHAR},
            </if>
            <if test="dbName != null">
                db_name = #{dbName, jdbcType=VARCHAR},
            </if>
            <if test="jdbcUrl != null">
                jdbc_url = #{jdbcUrl, jdbcType=VARCHAR},
            </if>
            <if test="jdbcDriver != null">
                jdbc_driver = #{jdbcDriver, jdbcType=VARCHAR},
            </if>
            <if test="type != null">
                type = #{type, jdbcType=INTEGER}
            </if>
        </set>
        WHERE
        id = #{id}
    </update>
</mapper>